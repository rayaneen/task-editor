<%# <%= turbo_stream_from "tasks" %>

<main class="container">
    <div class="header">
      <h1>Tasks</h1>
      <%= link_to "New task",
                  new_task_path,
                  class: "btn btn--primary",
                  data: { turbo_frame: dom_id(Task.new) }  %>
    </div>

    <%= turbo_frame_tag Task.new %>

    <%= turbo_frame_tag "tasks" do %>
      <%= render @tasks %>
    <% end %>
</main>
